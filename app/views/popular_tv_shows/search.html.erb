<h1>Search Results</h1>

<%= render "search_form" %>
<div class="card">
  <div class="card-body">
    <% @popular_tv_shows.each do |show| %>
      <div class="card">
        <div class="card-body">
          <h3><%= link_to show.name, tv_shows_show_details_path(show_id: show.id) %></h3>
          <div class="row">
            <div class="col-md-2"><%= image_tag "#{@base_url}w92#{show.poster_path}" %></div>
            <div class="col-md-10"><%= simple_format show.overview %></div>

          </div>
          <p>
            <%= link_to "View details Â»", tv_shows_show_details_path(show_id: show.id) %>
          </p>
        </div>
      </div>
    <% end %>

    <% if @popular_tv_shows.empty? %>
      <div>Exciting stuff coming very soon!</div>
    <% end %>

  </div>
</div>
